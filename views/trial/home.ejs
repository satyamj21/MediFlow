<%layout("/layout/boilerplate")-%>

<!-- HOME -->

<section id="home">
  <div class="home-inner">
    <div class="home-text">
      <h1>Know When to Arrive.<br />Save Your Time.</h1>

      <p>
        Book hospital appointments, track live queues, and visit only when your
        turn is near.
      </p>

      <div class="home-actions">
        <form method="get" action="/login">
          <button class="primary">Book</button>
        </form>

        <button class="ghost" onclick="location.href = '#how'">
          How It Works
        </button>
      </div>
    </div>

    <div class="home-img">
      <img
        src="https://www.pngall.com/wp-content/uploads/12/Illustration-PNG.png"
      />
    </div>
  </div>
</section>

<!-- HOW -->

<section id="how" class="how">
  <h2>How MediFlow Works</h2>

  <p class="section-sub">
    A seamless workflow designed to eliminate hospital waiting.
  </p>

  <div class="how-grid">
    <div class="how-card">
      <i class="fa-solid fa-calendar-check"></i>
      <h3>Book Appointment</h3>
      <p>Schedule your visit online in seconds.</p>
    </div>

    <div class="how-card">
      <i class="fa-solid fa-users"></i>
      <h3>Join Queue</h3>
      <p>Enter the hospital queue digitally.</p>
    </div>

    <div class="how-card">
      <i class="fa-solid fa-clock"></i>
      <h3>Track Updates</h3>
      <p>Monitor live waiting progress.</p>
    </div>

    <div class="how-card">
      <i class="fa-solid fa-door-open"></i>
      <h3>Arrive Smartly</h3>
      <p>Visit only when your turn is near.</p>
    </div>
  </div>
</section>

<!-- FEATURES -->

<section id="features" class="features">
  <h2>Platform Features</h2>

  <p class="section-sub">
    Built to optimize hospital visits and save valuable time.
  </p>

  <div class="features-grid">
    <div class="feature">
      <i class="fa-solid fa-wave-square"></i>
      <h3>Live Queue Tracking</h3>
      <p>Real-time visibility before arriving.</p>
    </div>

    <div class="feature">
      <i class="fa-solid fa-bolt"></i>
      <h3>Instant Booking</h3>
      <p>Schedule appointments in seconds.</p>
    </div>

    <div class="feature">
      <i class="fa-solid fa-chart-line"></i>
      <h3>Staff Dashboard</h3>
      <p>Optimized patient workflow management.</p>
    </div>

    <div class="feature">
      <i class="fa-solid fa-hourglass-half"></i>
      <h3>Time Optimization</h3>
      <p>No unnecessary waiting time.</p>
    </div>
  </div>
</section>
